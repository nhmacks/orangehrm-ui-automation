# Environment Configuration
NODE_ENV=dev

# Test Environment (dev | qa | prod)
TEST_ENV=dev

# Browser Configuration
BROWSER=chromium
HEADLESS=true
SLOW_MO=0

# Playwright Options
TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
ACTION_TIMEOUT=10000
VIDEO=off
SCREENSHOT=only-on-failure
TRACE=retain-on-failure

# Parallel Execution
WORKERS=2

# Dev Environment
DEV_BASE_URL=https://opensource-demo.orangehrmlive.com/web/index.php/auth/login
DEV_USERNAME=Admin
DEV_PASSWORD=admin123

# QA Environment
QA_BASE_URL=https://qa-orangehrm.example.com
QA_USERNAME=
QA_PASSWORD=

# Production Environment
PROD_BASE_URL=https://prod-orangehrm.example.com
PROD_USERNAME=
PROD_PASSWORD=

# Reporting
REPORT_PATH=./reports
SCREENSHOT_PATH=./screenshots
VIDEO_PATH=./videos

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Retry Configuration
RETRY_COUNT=0
RETRY_FLAKY_TESTS=true
